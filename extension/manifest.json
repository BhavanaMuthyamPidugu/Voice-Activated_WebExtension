{
  "manifest_version": 3,
  "name": "Voice-Activated Assistant",
  "version": "1.0",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "background": {
      "service_worker": "background.js"
  },
  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["content.js"]
      }
  ],
  "action": {
      "default_popup": "popup.html"
  }
}